                        </Grid.RowDefinitions>

                        <Image Source="/Resources/visual-studio.png"  Grid.RowSpan="2" 
VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Grid.Row="0" Text="\{Binding Name}" FontSize="20" Margin="5,0,0,0"/>
