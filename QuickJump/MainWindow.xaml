                        <TextBlock Grid.Column="1" Grid.Row="1" Text="\{Binding Description}" FontSize="14" TextWrapping="Wrap" Margin="5,0,0,0"/>
                    </Grid>
                </ListBoxItem>
                <ListBoxItem IsSelected="False">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
